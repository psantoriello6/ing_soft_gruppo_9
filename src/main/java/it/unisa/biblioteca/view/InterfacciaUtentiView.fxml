<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.biblioteca.controller.InterfacciaUtentiController">
   <children>
      
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #34495e;">
         <children>
            <Label text="GESTIONE UTENTI" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnHomeUtenti" mnemonicParsing="false" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Torna alla Home"  />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>

      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="900.0" spacing="10.0" style="-fx-background-color: #ecf0f1;">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="tfUtenti" prefHeight="35.0" prefWidth="250.0" promptText="Cerca..." style="-fx-background-radius: 5;" />
            <MenuButton fx:id="filterUtenti" mnemonicParsing="false" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: #f1c40f; -fx-background-radius: 5; -fx-font-weight: bold;" text="Filtro" textFill="#2c3e50" />
            <Button fx:id="btnCercaUtenti" mnemonicParsing="false" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Cerca" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Button fx:id="btnNuovoUtenti" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="+ Nuovo Utente" />
            <Button fx:id="btnModificaUtenti" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Modifica" />
            <Button fx:id="btnEliminaUtenti" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Elimina" />
         </children>
      </HBox>

      <TableView fx:id="tabellaUtenti" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colonnaCognomeUtenti" text="COGNOME" />
          <TableColumn fx:id="colonnaNomeUtenti" text="NOME" />
            <TableColumn fx:id="colonnaMatricolaUtenti" text="MATRICOLA" />
            <TableColumn fx:id="colonnaEmailUtenti" text="EMAIL" />
        </columns>
      </TableView>
   </children>
</VBox>