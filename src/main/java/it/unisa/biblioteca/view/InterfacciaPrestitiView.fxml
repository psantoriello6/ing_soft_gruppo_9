<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unisa.biblioteca.controller.InterfacciaPrestitiController">
   <children>
      
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #34495e;">
         <children>
            <Label text="GESTIONE PRESTITI" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnHomePrestiti" mnemonicParsing="false" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Torna alla Home" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>

      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          
          <Tab fx:id="tagPrestiti1" text="Nuovo Prestito">
            <content>
              <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #ecf0f1;">
                 <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                 </padding>
                 <children>
                    
                    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                       <children>
                          
                          <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                             <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                             </padding>
                             <children>
                                <Label text="RICERCA UTENTE" textFill="#3498db">
                                   <font>
                                      <Font name="System Bold" size="18.0" />
                                   </font>
                                </Label>
                                <HBox alignment="CENTER" spacing="10.0">
                                   <children>
                                      <TextField fx:id="tfRicercaUtente" prefHeight="35.0" promptText="Cerca utente..." style="-fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
                                      <MenuButton fx:id="menuFiltroUtente" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #f1c40f; -fx-background-radius: 5; -fx-font-weight: bold;" text="Filtro" textFill="#2c3e50" />
                                   </children>
                                </HBox>
                                <Button fx:id="btnCercaUtente" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Cerca Utente" />
                                <Label fx:id="lblUtenteTrovato" text="Nessun utente selezionato" textFill="#7f8c8d" wrapText="true">
                                   <font>
                                      <Font size="14.0" />
                                   </font>
                                </Label>
                             </children>
                          </VBox>

                          <VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
                             <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                             </padding>
                             <children>
                                <Label text="RICERCA LIBRO" textFill="#3498db">
                                   <font>
                                      <Font name="System Bold" size="18.0" />
                                   </font>
                                </Label>
                                <HBox alignment="CENTER" spacing="10.0">
                                   <children>
                                      <TextField fx:id="tfRicercaLibro" prefHeight="35.0" promptText="Cerca libro..." style="-fx-background-radius: 5;" HBox.hgrow="ALWAYS" />
                                      <MenuButton fx:id="menuFiltroLibro" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #f1c40f; -fx-background-radius: 5; -fx-font-weight: bold;" text="Filtro" textFill="#2c3e50" />
                                   </children>
                                </HBox>
                                <Button fx:id="btnCercaLibro" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Cerca Libro" />
                                <Label fx:id="lblLibroTrovato" text="Nessun libro selezionato" textFill="#7f8c8d" wrapText="true">
                                   <font>
                                      <Font size="14.0" />
                                   </font>
                                </Label>
                             </children>
                          </VBox>
                       </children>
                    </HBox>

                    <Button fx:id="btnRegistraPrestito" mnemonicParsing="false" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 16;" text="REGISTRA PRESTITO" />
                 </children>
              </VBox>
            </content>
          </Tab>
          
          <Tab fx:id="tagPrestiti2" text="Restituzioni">
            <content>
              <VBox>
                 <children>
                    <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0" style="-fx-background-color: #ecf0f1;">
                       <padding>
                          <Insets left="20.0" right="20.0" />
                       </padding>
                       <children>
                          <Label text="Seleziona i prestiti da chiudere:" textFill="#2c3e50">
                             <font>
                                <Font size="14.0" />
                             </font>
                          </Label>
                          <Region HBox.hgrow="ALWAYS" />
                          <Button fx:id="btnConfermaRestituzionePrestiti" mnemonicParsing="false" prefHeight="35.0" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Conferma Restituzione" />
                       </children>
                    </HBox>

                    <TableView fx:id="tabellaPrestiti" VBox.vgrow="ALWAYS">
                      <columns>
                          <TableColumn text="UTENTE">
                             <columns>
                                <TableColumn fx:id="colonnaMatricolaPrestiti" text="MATRICOLA" />
                                <TableColumn fx:id="colonnaCognomePrestiti" text="COGNOME" />
                             </columns>
                          </TableColumn>
                          
                          <TableColumn text="LIBRO">
                             <columns>
                                <TableColumn fx:id="colonnaTitoloPrestiti" text="TITOLO" />
                                <TableColumn fx:id="colonnaCodicePrestiti" text="ISBN" />
                             </columns>
                          </TableColumn>
                          
                          <TableColumn fx:id="colonnaDataPrestiti" text="DATA SCADENZA" />
                      </columns>
                       <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                       </columnResizePolicy>
                    </TableView>
                 </children>
              </VBox>
            </content>
          </Tab>

        </tabs>
      </TabPane>
   </children>
</VBox>
